<%- include("partials/header") %>

  <section id="content">

    <div class="content-box">
      <div class="content">
        <img class="barbie-logo" src="images/barbie-logo-transparent.png" alt="Barbie Logo">
      </div>
    </div>

    <div class="content-box">
      <div class="content">
        <form id="select-topics" name="select-topics" class="" action="/" method="get">
          <!-- drop down & select button -->
          <select class="topics" name="topics">
            <option value="family">Family</option>
            <option value="pets">Pets</option>
            <option value="jobs">Careers</option>
            <option value="movies/tv">Movies/TV</option>
            <option value="games">Miscellaneous</option>
          </select>
          <input class="select-topic" type="submit" name="select-topics"></input>
        </form>
      </div>
      <div class="content">
        <!-- random button -->
        <button class="random-topic" type="submit" name="random-topic">Random</button>
      </div>
    </div>

  </section>


  <!-- submission & corrections -->
  <section id="submit">

    <div class="content-box section-margin">
      <form class="" action="index.html" method="post">
        <button class="submit-buttons" type="submit" name="submissions">Submissions</button><br>
        <button class="submit-buttons" type="submit" name="corrections">Corrections</button>
      </form>
    </div>

  </section>

